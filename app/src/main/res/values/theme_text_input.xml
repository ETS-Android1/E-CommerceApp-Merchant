<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayout.HintText</item>
        <item name="boxStrokeColor">?attr/colorControlActivated</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">@color/lightTextColor</item>
        <item name="android:fontFamily">@font/dosis</item>
    </style>

    <style name="TextAppearance.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:fontFamily">@font/dosis</item>
    </style>
    <!--Auth Screen-->
    <style name="Widget.TextInputLayout.Auth" parent="Widget.TextInputLayout">
        <item name="android:textColorHint">@color/lightTextColor</item>
    </style>

    <style name="TextAppearance.TextInputLayout.HintText.Auth" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="fontFamily">@font/dosis_medium</item>
    </style>

    <style name="Widget.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/dosis_medium</item>
    </style>

    <style name="Widget.TextAppearance.Cat" parent="Widget.TextAppearance.Headline6">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">dosis</item>
    </style>

    <style name="Widget.TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/dosis_medium</item>
    </style>

    <style name="Widget.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/dosis</item>
    </style>

    <style name="Widget.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/dosis</item>
    </style>

    <style name="Widget.TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="fontFamily">@font/dosis_medium</item>
    </style>


    <style name="Widget.TextView.Edit" parent="">
        <item name="android:textAppearance">@style/TextAppearance.Text.Edit</item>
        <item name="android:fontFamily">@font/dosis</item>
    </style>

    <style name="TextAppearance.Text.Edit" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:fontFamily">@font/dosis</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>