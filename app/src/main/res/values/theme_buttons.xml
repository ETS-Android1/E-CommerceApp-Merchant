<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?android:attr/colorAccent</item>
        <item name="android:fontFamily">@font/dosis</item>
    </style>

    <style name="Widget.Button.Inverse" parent="Widget.Button">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?android:attr/colorPrimary</item>
    </style>

    <style name="Widget.Button.Progress" parent="">
        <item name="finishBackgroundDrawable">@drawable/bg_button_progress</item>
        <item name="finishIconDrawable">@drawable/ic_done_black_24dp</item>
        <item name="idleBackgroundDrawable">@drawable/bg_button_progress</item>
        <item name="cancelIconDrawable">@drawable/ic_cancel_black_24dp</item>
        <item name="progressIndeterminateSweepAngle">70</item>
        <item name="state">IDLE</item>
        <item name="determinateBackgroundDrawable">@drawable/bg_button_progress</item>
        <item name="indeterminateBackgroundDrawable">@drawable/bg_button_progress</item>
        <item name="progressDeterminateColor">?android:attr/colorAccent</item>
        <item name="progressIndeterminateColor">?android:attr/colorAccent</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Widget.Button.Progress.Edit" parent="Widget.Button.Progress">
        <item name="idleIconDrawable">@drawable/ic_edit_black_24dp</item>
    </style>

    <style name="Widget.Button.Progress.Delete" parent="Widget.Button.Progress">
        <item name="idleIconDrawable">@drawable/ic_delete_forever_black_24dp</item>
    </style>

</resources>