<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextLabel" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="Widget.TabLayout.Dash" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/Widget.Tab.TextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="Widget.Tab.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/dosis_medium</item>
    </style>

    <style name="Widget.BottomNavigationView.Overview" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/tab_text_icon_color_selector</item>
        <item name="itemTextAppearanceInactive">@style/Widget.Tab.TextAppearance</item>
        <item name="itemTextAppearanceActive">@style/Widget.Tab.TextAppearance</item>
        <item name="itemTextColor">@color/tab_text_icon_color_selector</item>
        <item name="itemRippleColor">@color/mtrl_bottom_nav_ripple_color</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">6dp</item>
        <item name="titleTextAppearance">@style/Widget.Toolbar.TextAppearance</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextAppearance">@style/Widget.TextAppearance.Subtitle2</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>

    <style name="Widget.Toolbar.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/dosis_medium</item>
    </style>


    <style name="Widget.NavigationDrawer.Dash" parent="">
        <item name="android:background">@color/drawer_color</item>
        <item name="headerLayout">@layout/nav_drawer_header</item>
        <item name="itemTextColor">@color/drawer_icon_color_selector</item>
        <item name="itemIconTint">@color/drawer_icon_color_selector</item>
        <item name="menu">@menu/menu_drawer</item>
        <item name="itemTextAppearance">@style/Widget.NavigationDrawer.TextAppearance</item>
    </style>

    <style name="Widget.NavigationDrawer.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/dosis_medium</item>
    </style>


    <style name="OneMoreFabMenu">
        <item name="label_text_color">?attr/colorPrimary</item>
        <item name="color_main_button">?attr/colorAccent</item>
        <item name="color_secondary_buttons">?attr/colorAccent</item>
        <item name="content_options">@menu/menu_change_status</item>
        <item name="expanded_background_color">@color/omfm_expanded_background_sample</item>
    </style>

    <style name="Widget.SpinKitView" parent="SpinKitView">
        <item name="SpinKit_Style">MultiplePulse</item>
        <item name="SpinKit_Color">?attr/colorAccent</item>
        <item name="android:maxWidth">60dip</item>
        <item name="android:maxHeight">60dip</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>